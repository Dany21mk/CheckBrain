<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_layout"
        android:theme="@style/Theme.CheckBrain.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/btn_ripple_reg"
            app:popupTheme="@style/Theme.CheckBrain.PopupOverlay">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ripple_back"
                android:padding="5dp"
                android:text="@string/back"
                android:id="@+id/btn_back"
                android:textColor="#fff"
                android:src="@drawable/ic_back" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/task"
            android:layout_below="@+id/app_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Задание"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textColor="@color/text"
            android:textSize="44sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/img_layout"
        android:gravity="center"
        android:layout_below="@+id/task"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"

            android:src="@drawable/wait"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/img_layout"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/point1"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point2"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point3"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point4"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point5"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point6"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point7"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point8"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point9"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point10"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point11"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point12"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point13"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point14"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point15"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point16"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point17"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point18"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point19"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
        <TextView
            android:id="@+id/point20"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_points"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_ripple_menu"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="7"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="8"
                android:background="@drawable/btn_ripple_menu"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:background="@drawable/btn_ripple_menu"
                android:text="9"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#4CAF50"
                android:background="@drawable/btn_ripple_menu"
                android:onClick="remove"
                android:text="←"
                android:textColor="#ffffff"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="4"
                android:background="@drawable/btn_ripple_menu"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="5"
                android:background="@drawable/btn_ripple_menu"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="6"
                android:textColor="#000000"
                android:textSize="24sp"
                android:background="@drawable/btn_ripple_menu"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:background="@drawable/btn_ripple_menu"
                android:onClick="inputDigit"
                android:text="-"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="1"
                android:textColor="#000000"
                android:background="@drawable/btn_ripple_menu"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:background="@drawable/btn_ripple_menu"
                android:text="2"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="3"
                android:background="@drawable/btn_ripple_menu"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FF0000"
                android:onClick="clear"
                android:background="@drawable/btn_ripple_menu"
                android:text="CE"
                android:textColor="#ffffff"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="."
                android:background="@drawable/btn_ripple_menu"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:text="0"
                android:background="@drawable/btn_ripple_menu"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dbzero"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:backgroundTint="#FFFFFF"
                android:onClick="inputDigit"
                android:background="@drawable/btn_ripple_menu"
                android:text="00"
                android:textColor="#000000"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000"
                android:layout_margin="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#673AB7"
                android:background="@drawable/btn_ripple_menu"
                android:onClick="help"
                android:text="\?"
                android:textColor="#ffffff"
                android:textSize="24sp"
                app:cornerRadius="10dp"
                app:strokeColor="#000" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>